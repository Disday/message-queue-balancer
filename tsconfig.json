{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "strict": true,
    "noImplicitAny": true,
    // "strictNullChecks": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "composite": true,
    "incremental": true,
    // "baseUrl": "./",
    // "outDir": "."
  },
  "references": [
    {
      "path": "apps/*"
    },
    {
      "path": "libs/"
    }
  ]
}